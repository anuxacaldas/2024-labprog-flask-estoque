{% extends '_layout.jinja2' %}
{%  from 'bootstrap5/utils.html' import render_icon %}

{% block content %}
    <table class="table table-striped table-hover">
    <thead><tr>
        <th scope="col">Nome do Produto</th>
        <th scope="col" class="text-end">Preços</th>
        <th scope="col">Categoria</th>
        <th scope="col">Ativo</th>
        <th scope="col">Estoque</th>
        <th scope="col" class="text-end">Operações</th>
    </tr></thead>
    <tbody>
    {% for produto in rset %}
        <tr><td>{{ produto.nome }}</td>
            <td class="text-end">{{ produto.preco }}</td>
            <td>{{ produto.categoria.nome }}</td>
            <td>{% if produto.ativo%}{{ render_icon('check', size=20, color='blue') }}{% else %}{{ render_icon('x', size=20, color='danger') }}{% endif %}</td>
            <td>{{ produto.estoque }}</td>


            <td><a href="#"
                   onclick="return confirm('Confirma a remoção da categoria?')">{{ render_icon('trash', size=20, color='danger') }}</a>
                <a href="#">
                    {{ render_icon('pencil-square', size=20) }} </a></td></tr>
    {% endfor %}
    </tbody>
    </table>
{% endblock %}